root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cmd,bat}]
end_of_line = crlf
insert_final_newline = false

[*.{md,json}]
trim_trailing_whitespace = false

[*.{raml,yaml,yml}]
indent_style = space
indent_size = 2
